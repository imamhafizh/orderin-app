<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbg"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36.7dp"
            android:layout_marginTop="88dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100.7dp"
                android:text="Register"
                android:textColor="#ffffff"
                android:textFontWeight="30dp"
                android:textSize="31sp" />

        </LinearLayout>

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34.6dp"
            android:layout_marginTop="54.7dp"
            android:layout_marginRight="33.6dp"
            android:background="#00000000"
            android:hint="Username"
            android:inputType="text"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textSize="14.4sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33ffffff"
            android:layout_marginLeft="34.6dp"
            android:layout_marginRight="33.6dp"
            android:layout_marginTop="6.5dp"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34.6dp"
            android:layout_marginTop="24.7dp"
            android:layout_marginRight="33.6dp"
            android:background="#00000000"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textSize="14.4sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33ffffff"
            android:layout_marginLeft="34.6dp"
            android:layout_marginRight="33.6dp"
            android:layout_marginTop="6.5dp"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34.6dp"
            android:layout_marginTop="33.6dp"
            android:layout_marginRight="33.6dp"
            android:background="#00000000"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textSize="14.4sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33ffffff"
            android:layout_marginLeft="34.6dp"
            android:layout_marginRight="33.6dp"
            android:layout_marginTop="6.5dp"/>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34.6dp"
            android:layout_marginTop="53.8dp"
            android:layout_marginRight="33.6dp"
            android:background="@color/colorAccent"
            android:onClick="Register"
            android:text="Register"
            android:textColor="@android:color/background_light"
            android:textColorLink="@android:color/holo_red_dark" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>